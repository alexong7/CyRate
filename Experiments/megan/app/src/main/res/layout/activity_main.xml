<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/notAlexButton"
        android:layout_width="192dp"
        android:layout_height="167dp"
        android:layout_below="@id/whereToEat"
        android:layout_centerHorizontal="true"
        android:text="i'm not alex"
        android:textAlignment="center" />

    <Button
        android:id="@+id/alexButton"
        android:layout_width="206dp"
        android:layout_height="211dp"
        android:layout_below="@id/notAlexButton"
        android:layout_centerHorizontal="true"
        android:text="i'm alex" />

    <Button
        android:id="@+id/enterMyNameButton"
        android:layout_width="206dp"
        android:layout_height="211dp"
        android:layout_below="@id/alexButton"
        android:layout_centerHorizontal="true"
        android:text="enter my name" />

    <TextView
        android:id="@+id/whereToEat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="where should i eat?????????"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />
</RelativeLayout>